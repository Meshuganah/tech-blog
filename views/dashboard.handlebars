<section>
    <h2>Create New Post</h2>

    <form class="new-post">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title">
        </div>
        <div>
            <label for="text-content">Post</label>
            <input type="text-area" id="text-content" name="text-content">
        </div>
        <button type="submit">Create Post</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}">Edit Post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>